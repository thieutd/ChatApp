{
  "compilerOptions": {
    "outDir": "./dist",  // Ensures compiled files go into 'dist/'
    "rootDir": "./src",  // Ensures TypeScript compiles from 'src/'
    "module": "CommonJS",
    "target": "ES6",
    "strict": true,
    "esModuleInterop": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
